<% name_authorities = Hyrax::NameAuthority.new %>

<%=
  f.input key,
  as: :multi_value,
  input_html: {
    class: 'form-control',
    data: { 'autocomplete-url' => "/authorities/search/creator_authority",
      'autocomplete' => key }
  } ,
  required: f.object.required?(key) %>

<%= f.input key, collection: name_authorities.select_active_options, label: false %>
